{
    "exclude": [
        "**/dist",
        "**/node_modules",
    ],
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "./packages/**/types",
            "node_modules/@types",
        ]
    }
}